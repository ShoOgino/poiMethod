    public static HSLFSlideShow reopen(HSLFSlideShow show) {
        try {
            BufAccessBAOS bos = new BufAccessBAOS();
            show.write(bos);
            return new HSLFSlideShow(new ByteArrayInputStream(bos.getBuf()));
        } catch (IOException e) {
            fail(e.getMessage());
            return null;
        }
    }

