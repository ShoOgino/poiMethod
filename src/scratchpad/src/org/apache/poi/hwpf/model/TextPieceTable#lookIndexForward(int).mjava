    public int lookIndexForward(int bytePos) {
        for(TextPiece tp : _textPiecesFCOrder) {
			int pieceStart = tp.getPieceDescriptor().getFilePosition();

            if (bytePos > pieceStart + tp.bytesLength()) {
                continue;
            }

			if (pieceStart > bytePos) {
				bytePos = pieceStart;
			}

            break;
        }
        return bytePos;
    }

