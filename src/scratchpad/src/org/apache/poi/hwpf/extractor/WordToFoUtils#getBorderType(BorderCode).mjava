    public static String getBorderType(BorderCode borderCode) {
	if (borderCode == null)
	    throw new IllegalArgumentException("borderCode is null");

	switch (borderCode.getBorderType()) {
	case 1:
	case 2:
	    return "solid";
	case 3:
	    return "double";
	case 5:
	    return "solid";
	case 6:
	    return "dotted";
	case 7:
	case 8:
	    return "dashed";
	case 9:
	    return "dotted";
	case 10:
	case 11:
	case 12:
	case 13:
	case 14:
	case 15:
	case 16:
	case 17:
	case 18:
	case 19:
	    return "double";
	case 20:
	    return "solid";
	case 21:
	    return "double";
	case 22:
	    return "dashed";
	case 23:
	    return "dashed";
	case 24:
	    return "ridge";
	case 25:
	    return "grooved";
	default:
	    return "solid";
	}
    }

