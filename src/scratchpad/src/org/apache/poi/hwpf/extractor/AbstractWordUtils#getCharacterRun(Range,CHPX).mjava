    private static CharacterRun getCharacterRun( Range range, CHPX chpx )
    {
        try
        {
            Method method = Range.class.getDeclaredMethod( "getCharacterRun",
                    CHPX.class );
            method.setAccessible( true );
            return (CharacterRun) method.invoke( range, chpx );
        }
        catch ( Exception exc )
        {
            throw new Error( exc );
        }
    }

