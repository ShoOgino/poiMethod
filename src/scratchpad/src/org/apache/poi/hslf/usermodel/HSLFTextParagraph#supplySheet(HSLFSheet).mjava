    /**
     * Supply the Sheet we belong to, which might have an assigned SlideShow
     * Also passes it on to our child RichTextRuns
     */
    public void supplySheet(HSLFSheet sheet) {
        this._sheet = sheet;

        if (_runs == null) return;
        for (HSLFTextRun rt : _runs) {
            rt.updateSheet();
        }
    }

