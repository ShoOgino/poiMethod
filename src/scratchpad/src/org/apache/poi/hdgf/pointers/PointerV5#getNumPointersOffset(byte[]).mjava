	/**
	 * Depends on the type only, not stored
	 */
    public int getNumPointersOffset(byte[] data) {
        switch (type) {
            case 0x1d:
            case 0x4e:
               return 0x24-6;
            case 0x1e:
               return 0x3c-6;
            case 0x14:
                return 0x88-6;
       }
       return 10;
    }

