    protected static boolean areSubArraysConsistent(double[][] values) {
        boolean retval = false;
        
        outer: do {
            if (values != null && values.length > 0) {
                if (values[0] == null)
                    break outer;
                int len = values[0].length;
                for (int i=1, iSize=values.length; i<iSize; i++) {
                    if (values[i] == null)
                        break outer;
                    int tlen = values[i].length;
                    if (len != tlen) {
                        break outer;
                    }
                }
            }
            retval = true;
        } while (false);
        return retval;
    }

