	/**
	 * Figures out how big a given PackagePart is.
	 */
	public static long getSize(PackagePart part) throws IOException {
		InputStream in = part.getInputStream();
		byte[] b = new byte[8192];
		long size = 0;
		int read = 0;
		
		while(read > -1) {
			read = in.read(b);
			if(read > 0) {
				size += read;
			}
		}
		
		return size;
	}

