    public String getText(final Slide<S,P> slide) {
        final StringBuilder sb = new StringBuilder();

        if (slidesByDefault) {
            printShapeText(slide, sb);
        }

        if (commentsByDefault) {
            printComments(slide, sb);
        }

        if (notesByDefault) {
            printNotes(slide, sb);
        }

        return sb.toString();
    }

