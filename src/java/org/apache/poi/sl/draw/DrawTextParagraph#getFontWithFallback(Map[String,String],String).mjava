    private String getFontWithFallback(Map<String, String> fontMap, String mappedFont) {
        if (fontMap != null) {
            if (fontMap.containsKey(mappedFont)) {
                mappedFont = fontMap.get(mappedFont);
            } else if (fontMap.containsKey("*")) {
                mappedFont = fontMap.get("*");
            }
        }
        return mappedFont;
    }

