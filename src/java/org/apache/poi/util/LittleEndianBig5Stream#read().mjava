    @Override
    public int read() {

        if (trailing != EMPTY_TRAILING) {
            int tmp = trailing;
            trailing = EMPTY_TRAILING;
            return tmp;
        }
        int leading = readNext();
        while (leading == INVALID_PAIR) {
            leading = readNext();
        }

        if (leading == EOF) {
            return EOF;
        }
        return leading;
    }

