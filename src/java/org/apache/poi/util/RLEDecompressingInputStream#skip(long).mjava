    @Override
    public long skip(long n) throws IOException {
        long length = n;
        while (length > 0) {
            if (pos >= len) {
                if ((len = readChunk()) == -1) {
                    return -1;
                }
            }
            int c = (int) Math.min(n, len - pos);
            pos += c;
            length -= c;
        }
        return n;
    }

