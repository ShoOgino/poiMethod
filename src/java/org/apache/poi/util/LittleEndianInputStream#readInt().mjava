	public int readInt() {
		int ch1;
		int ch2;
		int ch3;
		int ch4;
		try {
			ch1 = in.read();
			ch2 = in.read();
			ch3 = in.read();
			ch4 = in.read();
		} catch (IOException e) {
			throw new RuntimeException(e);
		}
		checkEOF(ch1 | ch2 | ch3 | ch4);
		return (ch4 << 24) + (ch3 << 16) + (ch2 << 8) + (ch1 << 0);
	}

