    private void writeProp(String k, Supplier<?> v) {
        final boolean isNext = (childIndex++>0);
        if (isNext) {
            fw.println();
        }
        fw.write(tabs());
        fw.write('\t');
        fw.write(isNext ? ", " : "  ");
        fw.write(k);
        fw.write(": ");
        final int oldChildIndex = childIndex;
        childIndex = 0;
        writeValue(v.get());
        childIndex = oldChildIndex;
    }

