    /**
     * Helper method to determine how many bits in the CopyToken are used for the CopyLength.
     * 
     * @param offset
     * @return
     */
    static int getCopyLenBits(int offset) {
        for (int n = 11; n >= 4; n--) {
            if ((offset & POWER2[n]) != 0) {
                return 15 - n;
            }
        }
        return 12;
    }

