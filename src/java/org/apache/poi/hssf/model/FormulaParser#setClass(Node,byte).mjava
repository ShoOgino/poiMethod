     private void setClass(Node n, byte theClass) {
        Ptg p = n.getValue();
        if (p.isBaseToken()) {
            return;
        }
        
        if (p instanceof AbstractFunctionPtg || !(p instanceof OperationPtg)) {
            p.setClass(theClass);
        } else {
            for (int i =0;i<n.getNumChildren();i++) {
                setClass(n.getChild(i),theClass);
            }
        }
     }

