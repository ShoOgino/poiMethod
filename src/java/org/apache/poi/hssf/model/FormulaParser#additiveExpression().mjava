    /** Parse and Translate an Expression */
    private void additiveExpression() {
        Term();
        while (true) {
            SkipWhite();
            switch(look) {
                case '+':
                    Match('+');
                    Term();
                    tokens.add(new AddPtg());
                    continue;
                case '-':
                    Match('-');
                    Term();
                    tokens.add(new SubtractPtg());
                    continue;
            }
            return; // finished with additive expression
        }
    }

