    private Ptg getFunction(String name,byte numArgs) {
        Ptg retval = null;
        //retval = new FuncVarPtg(name,numArgs);
       if (name.equals("IF")) {
            AttrPtg ptg = new AttrPtg();
            ptg.setData((short)6); //sums don't care but this is what excel does.
            ptg.setOptimizedIf(true);
            retval = ptg;
        } else {
            retval = new FuncVarPtg(name,numArgs);
        }
        
        return retval; 
    }

