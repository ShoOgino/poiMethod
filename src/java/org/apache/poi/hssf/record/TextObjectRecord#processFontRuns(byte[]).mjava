    private void processFontRuns( byte[] data )
    {
        int pos = 0;
        do
        {
            short index = LittleEndian.getShort( data, pos );
            pos += 2;
            short iFont = LittleEndian.getShort( data, pos );
            pos += 2;
            pos += 4;  // skip reserved.

            if ( index >= str.length() )
                break;
            str.applyFont( index, str.length(), iFont );
        }
        while ( true );
    }

