    {
        for ( int k = 0; k < formulaTokens.length; k++ )
        {
        	Ptg ptg = formulaTokens[k];
            buffer.append( "Formula " )
                    .append( k )
                    .append( "=" )
                    .append(ptg.toString() )
                    .append( "\n" )
                    .append(ptg.toString())
                    .append( "\n" );
        }
    }

