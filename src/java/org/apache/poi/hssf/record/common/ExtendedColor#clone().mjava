    public Object clone()  {
        ExtendedColor exc = new ExtendedColor();
        exc.type = type;
        exc.tint = tint;
        if (type == TYPE_INDEXED) {
            exc.colorIndex = colorIndex;
        } else if (type == TYPE_RGB) {
            exc.rgba = new byte[4];
            System.arraycopy(rgba, 0, exc.rgba, 0, 4);
        } else if (type == TYPE_THEMED) {
            exc.themeIndex = themeIndex;
        }
        return exc;
    }

