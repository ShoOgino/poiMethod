	protected int getDataSize(){
		int result = 3 * 2  // 3 short fields
			+ 2 + field_4_name.length(); // nameLen and name
		if(hasFormula()) {
			result += field_5_name_definition.getEncodedSize();
		} else {
			if (_ddeValues != null) {
				result += 3; // byte, short
				result += ConstantValueParser.getEncodedSize(_ddeValues);
			}
		}
		return result;
	}

