    /**
     * Calculates the total unicode size for all the strings.
     *
     * @return the total size.
     */
    int calculateUnicodeSize()
    {
        int retval = 0;

        for ( int k = 0; k < strings.size(); k++ )
        {
            retval += getUnicodeString( k ).getRecordSize();
        }
        return retval;
    }

