    public ValueEval getValueAt(int row, int col) {
        ValueEval retval;
        int index = ((row-getFirstRow())*(getLastColumn()-getFirstColumn()+1))+(col-getFirstColumn());
        if (index <0 || index >= _values.length)
            retval = ErrorEval.VALUE_INVALID;
        else 
            retval = _values[index];
        return retval;
    }

