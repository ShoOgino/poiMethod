    /** get arguments to a function */
    private int Arguments() {
        int numArgs = 0;
        if (Look != ')')  {
            numArgs++; 
            Expression();
        }
        while (Look == ','  || Look == ';') { //TODO handle EmptyArgs
            if(Look == ',') {
              Match(',');
            }
            else {
              Match(';');
            }
            Expression();
            numArgs++;
        }
        return numArgs;
    }

