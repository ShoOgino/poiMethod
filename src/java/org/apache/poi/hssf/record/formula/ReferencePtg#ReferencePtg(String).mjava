    /**
     * Takes in a String represnetation of a cell reference and fills out the 
     * numeric fields.
     */
    public ReferencePtg(String cellref) {
        int[] xy = ReferenceUtil.getXYFromReference(cellref);
        setRow((short)xy[0]);
        setColumn((short)xy[1]);
        setColRelative(true);
        setRowRelative(true);
    }

