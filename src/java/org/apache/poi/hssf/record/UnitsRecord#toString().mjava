    public String toString()
    {
        StringBuffer buffer = new StringBuffer();

        buffer.append("[Units]\n");

        buffer.append("    .units                = ")
            .append("0x")
            .append(HexDump.toHex((short)getUnits()))
            .append(" (").append(getUnits()).append(" )\n");

        buffer.append("[/Units]\n");
        return buffer.toString();
    }

