	/**
	 *  @return sum of sizes of all aggregated records
	 */
	public int getRecordSize() 
	{
        int size = 0;
        if( header != null)
        {
        	size += header.getRecordSize();
        }
        if( rules != null)
        {
            for(Iterator irecs = rules.iterator(); irecs.hasNext(); )
            {
                size += (( Record ) irecs.next()).getRecordSize();
            }
        }
        return size;
    }

