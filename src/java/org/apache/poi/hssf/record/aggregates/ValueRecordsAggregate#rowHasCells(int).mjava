    /** Returns true if the row has cells attached to it */
    public boolean rowHasCells(int row)
    {
        if (row == -1)
            return false;

        int col = 0;
        while (celltype.isAllocated( col, row))
        {
            if (celltype.get( col, row ) != 0)
                return true;
            col++;
        }
        return false;
    }

