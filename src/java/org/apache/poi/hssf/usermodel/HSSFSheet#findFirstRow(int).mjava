    /**
     * used internally to refresh the "first row" when the first row is removed.
     */

    private int findFirstRow(int firstrow)
    {
        int     rownum = firstrow + 1;
        HSSFRow r      = getRow(rownum);

        while (r == null)
        {
            r = getRow(++rownum);
        }
        return rownum;
    }

