    private int getType(HyperlinkRecord record) {
        int link_type;
        // Figure out the type
        if (record.isFileLink()) {
            link_type = LINK_FILE;
        } else if(record.isDocumentLink()) {
            link_type = LINK_DOCUMENT;
        } else {
            if(record.getAddress() != null &&
                    record.getAddress().startsWith("mailto:")) {
                link_type = LINK_EMAIL;
            } else {
                link_type = LINK_URL;
            }
        }
        return link_type;
    }

