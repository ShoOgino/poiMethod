    /**
     * used internally to refresh the "last row" when the last row is removed.
     */

    private int findLastRow(int lastrow)
    {
        int     rownum = lastrow - 1;
        HSSFRow r      = getRow(rownum);

        while (r == null)
        {
            r = getRow(--rownum);
        }
        return rownum;
    }

