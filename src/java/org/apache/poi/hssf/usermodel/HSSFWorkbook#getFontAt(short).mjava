    /**
     * get the font at the given index number
     * @param index number
     * @return HSSFFont at the index
     */

    public HSSFFont getFontAt(short idx)
    {
        FontRecord font   = workbook.getFontRecordAt(idx);
        HSSFFont   retval = new HSSFFont(idx, font);

        return retval;
    }

