    private void alertShortRead(int read) throws IOException {
    	if (read == -1)
    		//Cant have -1 bytes read in the error message!
    		read = 0;
        String type = " byte" + ((read == 1) ? ("")
                                                   : ("s"));

        throw new IOException("Unable to read entire header; "
                              + read + type + " read; expected "
                              + bigBlockSize + " bytes");
    }

