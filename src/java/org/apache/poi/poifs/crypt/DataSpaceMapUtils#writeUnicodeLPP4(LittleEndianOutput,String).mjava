    public static void writeUnicodeLPP4(LittleEndianOutput os, String str) {
        try {
            byte buf[] = str.getBytes("UTF-16LE");
            os.writeInt(buf.length);
            os.write(buf);
            if (buf.length%4==2) {
                os.writeShort(0);
            }
        } catch (UnsupportedEncodingException e) {
            throw new EncryptedDocumentException(e);
        }
    }

