    void read( LittleEndianByteArrayInputStream lei ) {
        _type = lei.readShort();
        short padding = lei.readShort();
        if ( padding != 0 ) {
            LOG.log( POILogger.WARN, "TypedPropertyValue padding at offset "
                    + lei.getReadIndex() + " MUST be 0, but it's value is " + padding );
        }
        readValue( lei );
    }

