    Blob( byte[] data, int offset )
    {
        int size = LittleEndian.getInt( data, offset );

        if ( size == 0 )
        {
            _value = new byte[0];
            return;
        }

        _value = LittleEndian.getByteArray( _value, offset
                + LittleEndian.INT_SIZE, size );
    }

