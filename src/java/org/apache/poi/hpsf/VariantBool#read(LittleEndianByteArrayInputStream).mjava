    void read( LittleEndianByteArrayInputStream lei ) {
        short value = lei.readShort();
        switch (value) {
            case 0:
                _value = false;
                break;
            case -1:
                _value = true;
                break;
            default:
                LOG.log( POILogger.WARN, "VARIANT_BOOL value '"+value+"' is incorrect" );
                _value = true;
                break;
        }
    }

