    VariantBool( byte[] data, int offset ) {
        short value = LittleEndian.getShort( data, offset );
        switch (value) {
            case 0:
                _value = false;
                break;
            case -1:
                _value = true;
                break;
            default:
                logger.log( POILogger.WARN, "VARIANT_BOOL value '"+value+"' is incorrect" );
                _value = true;
                break;
        }
    }

