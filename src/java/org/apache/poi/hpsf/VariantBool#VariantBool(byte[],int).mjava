    VariantBool( byte[] data, int offset )
    {
        short value = LittleEndian.getShort( data, offset );
        if ( value == 0x0000 )
        {
            _value = false;
            return;
        }

        if ( value == 0xffff )
        {
            _value = true;
            return;
        }

        logger.log( POILogger.WARN, "VARIANT_BOOL value '",
                Short.valueOf( value ), "' is incorrect" );
        _value = value != 0;
    }

