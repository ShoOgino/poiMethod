    /**
     * @return the section's size in bytes.
     */
    public int getSize() {
        if (dirty) {
            try {
                size = calcSize();
                dirty = false;
            } catch (HPSFRuntimeException ex) {
                throw ex;
            } catch (Exception ex) {
                throw new HPSFRuntimeException(ex);
            }
        }
        return size;
    }

