	protected CellRangeAddressBase(int firstRow, int lastRow, int firstCol, int lastCol) {
		if(!isValid(firstRow, lastRow, firstCol, lastCol)) {
			throw new IllegalArgumentException("invalid cell range (" + firstRow + ", " + lastRow 
					+ ", " + firstCol + ", " + lastCol + ")");
		}
		_firstRow = firstRow;
		_lastRow =lastRow;
		_firstCol = firstCol;
		_lastCol = lastCol;
	}

