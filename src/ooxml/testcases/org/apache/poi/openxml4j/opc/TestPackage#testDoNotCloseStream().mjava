	@Test
	public void testDoNotCloseStream() throws IOException {
		OutputStream os = Mockito.mock(OutputStream.class);
		try (XSSFWorkbook wb = new XSSFWorkbook()) {
			wb.createSheet();
			wb.write(os);
		}
		verify(os, never()).close();

		try (SXSSFWorkbook wb = new SXSSFWorkbook()) {
			wb.createSheet();
			wb.write(os);
		}
		verify(os, never()).close();
	}

