    /**
     * add a style to the document
     * @param style				
     * @throws IOException		 
     */
    public void addStyle(XWPFStyle style){
        listStyle.add(style);
        ctStyles.addNewStyle();
        int pos = ctStyles.sizeOfStyleArray() - 1;
        ctStyles.setStyleArray(pos, style.getCTStyle());
    }

