    public String getInsideHBorderColor() {
	String color = null;

	CTTblPr tblPr = getTrPr();
	if (tblPr.isSetTblBorders()) {
	    CTTblBorders ctb = tblPr.getTblBorders();
	    if (ctb.isSetInsideH()) {
		CTBorder border = ctb.getInsideH();
		color = border.xgetColor().getStringValue();
	    }
	}
	return color;
    }

