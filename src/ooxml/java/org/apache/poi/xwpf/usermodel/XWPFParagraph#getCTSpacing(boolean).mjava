    /**
     * Get a <b>copy</b> of the currently used CTSpacing, if none is used,
     * return a new instance.
     */
    private CTSpacing getCTSpacing(boolean create) {
        CTPPr pr = getCTPPr();
        if (pr != null) {
            CTSpacing ct = pr.isSetSpacing() ? pr.getSpacing() : null;
            if (create && ct == null)
                ct = pr.addNewSpacing();
            return ct;
        }
        return null;
    }

