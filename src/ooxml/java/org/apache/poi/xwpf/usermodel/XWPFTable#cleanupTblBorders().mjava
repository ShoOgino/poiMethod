    /**
     * removes the Borders node from Table properties if there are 
     * no border elements
     */
    private void cleanupTblBorders() {
        CTTblBorders b = getTblBorders(false);
        if (b != null) {
            if (b.getInsideH() == null &&
                    b.getInsideV() == null &&
                    b.getTop() == null &&
                    b.getBottom() == null &&
                    b.getLeft() == null &&
                    b.getRight() == null) {
                getTblPr(false).unsetTblBorders();
            }
        }
    }

