    public int getCellMarginTop() {
        int margin = 0;
        CTTblPr tblPr = getTrPr();
        CTTblCellMar tcm = tblPr.getTblCellMar();
        if (tcm != null) {
        	CTTblWidth tw = tcm.getTop();
        	if (tw != null) {
        		margin = tw.getW().intValue();
        	}
        }
        return margin;
    }

