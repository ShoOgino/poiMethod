    @Override
    public Color getLineColor() {

        Color lineColor = super.getLineColor();
        if (lineColor != null)
            return lineColor;

        // get from master
        if (_masterShape != null) {
            return _masterShape.getLineColor();
        }

        // get default
        XDGFStyleSheet style = _document.getDefaultLineStyle();
        if (style != null)
            return style.getLineColor();

        return null;
    }

