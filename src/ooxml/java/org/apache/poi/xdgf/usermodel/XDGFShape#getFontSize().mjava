	public Double getFontSize() {
		
		Double fontSize = super.getFontSize();
		if (fontSize != null)
			return fontSize;
		
		// get from master
		if (_masterShape != null) {
			return _masterShape.getFontSize();
		}
		
		// get default
		XDGFStyleSheet style = _document.getDefaultTextStyle();
		if (style != null)
			return style.getFontSize();
					
		return null;
	}

