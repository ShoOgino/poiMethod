    @Override
    public Color getFontColor() {

        Color fontColor = super.getFontColor();
        if (fontColor != null)
            return fontColor;

        // get from master
        if (_masterShape != null) {
            return _masterShape.getFontColor();
        }

        // get default
        XDGFStyleSheet style = _document.getDefaultTextStyle();
        if (style != null)
            return style.getFontColor();

        return null;
    }

