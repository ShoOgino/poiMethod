    /**
     * Closes the underlying {@link OPCPackage} from which this
     *  document was read, if there is one
     */
    public void close() throws IOException {
        if (pkg != null) {
            if (pkg.getPackageAccess() == PackageAccess.READ) {
                pkg.revert();
            } else {
                pkg.close();
            }
            pkg = null;
        }
    }

