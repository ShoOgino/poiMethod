    public static void main(String[] args) throws IOException, ClassNotFoundException {

        String dest = null, test = null, ooxml = null;

        for (int i = 0; i < args.length; i++) {
            switch (args[i]) {
                case "-dest":
                    dest = args[++i];
                    break;
                case "-test":
                    test = args[++i];
                    break;
                case "-ooxml":
                    ooxml = args[++i];
                    break;
            }
        }
        OOXMLLite builder = new OOXMLLite(dest, test, ooxml);
        builder.build();
    }

