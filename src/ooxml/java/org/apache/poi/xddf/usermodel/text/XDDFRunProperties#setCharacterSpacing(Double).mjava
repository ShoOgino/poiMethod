    public void setCharacterSpacing(Double spacing) {
        if (spacing == null) {
            if (props.isSetSpc()) {
                props.unsetSpc();
            }
        } else if (spacing < -4000 || 4000 < spacing) {
            throw new IllegalArgumentException("Minimum inclusive = -4000. Maximum inclusive = 4000.");
        } else {
            props.setSpc((int) (100 * spacing));
        }
    }

