    public XDDFTextBody getBody() {
        XDDFTextBody body;
        if (title.isSetTxPr()) {
            body = new XDDFTextBody(parent, title.getTxPr());
        } else {
            if (!title.isSetTx()) {
                title.addNewTx();
            }
            CTTx tx = title.getTx();
            if (!tx.isSetRich()) {
                tx.addNewRich();
            }
            body = new XDDFTextBody(parent, tx.getRich());
        }
        return body;
    }

