    private String getVisibleText(){
        StringBuilder out = new StringBuilder();
        for (XSLFTextRun r : _runs) {
            String txt = r.getText();
            switch (r.getTextCap()){
                case ALL:
                    txt = txt.toUpperCase();
                    break;
                case SMALL:
                    txt = txt.toLowerCase();
                    break;
            }
            out.append(txt);
        }
        return out.toString();
    }

