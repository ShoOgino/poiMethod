    /**
     * Remove the column at the given index.
     * @param colIdx the column index.
     * @since POI 4.1.2
     */
    public void removeColumn(int colIdx) {
        _table.getTblGrid().removeGridCol(colIdx);
        for(XSLFTableRow row : _rows) {
            row.removeCell(colIdx);
        }
        updateRowColIndexes();
    }

