    @Override
    public int getType() {
        String action = _link.getAction();
        if (action == null) {
            action = "";
        }
        if (action.equals("ppaction://hlinksldjump") || action.startsWith("ppaction://hlinkshowjump")) {
            return LINK_DOCUMENT;
        }
        
        String address = getAddress();
        if (address == null) {
            address = "";
        }
        if (address.startsWith("mailto:")) {
            return LINK_EMAIL;
        } else {
            return LINK_URL;
        }
    }

