    @Override
    public XSLFTheme getTheme() {
        if (_theme == null) {
            for (POIXMLDocumentPart p : getRelations()) {
                if (p instanceof XSLFTheme) {
                    _theme = (XSLFTheme) p;
                    CTColorMapping cmap = _slide.getClrMap();
                    if (cmap != null) {
                        _theme.initColorMap(cmap);
                    }
                    break;
                }
            }
        }
        return _theme;
    }    

