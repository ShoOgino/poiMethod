    double getWrappingWidth(){
        double width;
        if(!_shape.getWordWrap()) {
            width = _shape.getSheet().getSlideShow().getPageSize().getWidth();
        } else {
            width = _shape.getAnchor().getWidth() -
                    _shape.getMarginLeft() - _shape.getMarginRight() - getLeftMargin();
        }
        return width;
    }

