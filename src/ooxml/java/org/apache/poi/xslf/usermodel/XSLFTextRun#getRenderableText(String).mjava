    String getRenderableText(String txt) {
        // TODO: finish support for tabs
        txt = txt.replace("\t", "  ");

        switch (getTextCap()) {
            case ALL:
                txt = txt.toUpperCase(LocaleUtil.getUserLocale());
                break;
            case SMALL:
                txt = txt.toLowerCase(LocaleUtil.getUserLocale());
                break;
        }
        return txt;
    }

