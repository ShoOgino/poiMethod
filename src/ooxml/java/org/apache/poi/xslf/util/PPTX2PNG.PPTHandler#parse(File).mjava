        @Override
        public void parse(File file) throws IOException {
            try {
                ppt = SlideShowFactory.create(file, null, true);
            } catch (IOException e) {
                if (e.getMessage().contains("scratchpad")) {
                    throw new NoScratchpadException(e);
                } else {
                    throw e;
                }
            }
            slide = ppt.getSlides().get(0);
        }

