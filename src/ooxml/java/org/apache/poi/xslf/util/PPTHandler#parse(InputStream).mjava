    @Override
    public void parse(InputStream is) throws IOException {
        try {
            ppt = SlideShowFactory.create(is, null);
        } catch (IOException e) {
            if (e.getMessage().contains("scratchpad")) {
                throw new PPTX2PNG.NoScratchpadException(e);
            } else {
                throw e;
            }
        }
        slide = ppt.getSlides().get(0);
    }

