    /**
     * Gives back the used XAdES signature facet.
     * 
     * @return
     */
    public XAdESSignatureFacet getXAdESSignatureFacet() {
        for (SignatureFacet sf : getSignatureFacets()) {
            if (sf instanceof XAdESSignatureFacet) {
                return (XAdESSignatureFacet)sf;
            }
        }
        return null;
    }

