    public boolean isRowBroken(int row) {
        int[] rowBreaks = getRowBreaks();
        if (rowBreaks == null) {
            return false;
        }
        for (int i = 0 ; i < rowBreaks.length ; i++) {
            if (rowBreaks[i] == row) {
                return true;
            }
        }
        return false;
    }

