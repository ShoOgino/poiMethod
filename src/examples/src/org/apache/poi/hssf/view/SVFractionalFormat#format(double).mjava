    public final String format(double val) {
        if (mode == ONE_DIGIT) {
            return format(val, 9);
        } else if (mode == TWO_DIGIT) {
            return format(val, 99);
        } else if (mode == THREE_DIGIT) {
            return format(val, 999);
        } else if (mode == UNITS) {
            return formatUnit(val, units);
        }
        throw new RuntimeException("Unexpected Case");
    }

