    /**
     * Tests the arabic setting
     */
    @Test
    public void arabic() throws IOException {
        HSSFWorkbook wb = new HSSFWorkbook();
        HSSFSheet s = wb.createSheet();

        assertFalse(s.isRightToLeft());
        s.setRightToLeft(true);
        assertTrue(s.isRightToLeft());
        wb.close();
    }

