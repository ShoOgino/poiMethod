    public void testDumpToStringOutOfIndex() throws Exception {
        byte[] testArray = new byte[ 0 ];

        try {
            HexDump.dump(testArray, 0, -1);
            fail("Should throw an exception with invalid input");
        } catch (ArrayIndexOutOfBoundsException e) {
            // expected
        }

        try {
            HexDump.dump(testArray, 0, 1);
            fail("Should throw an exception with invalid input");
        } catch (ArrayIndexOutOfBoundsException e) {
            // expected
        }
    }

