        System.out.println("Formula:" + cell.getCellFormula());

        if (Cell.CELL_TYPE_FORMULA == cell.getCellType()) {
            int formulaResultType = cell.getCachedFormulaResultType();
            System.out.println("Formual Result Type:" + formulaResultType);
        }

        workbook.close();
    }

