    public static String read(Reader in, int length)
            throws IOException
    {
        BufferedReader bin = null;

        try
        {
            bin = new BufferedReader(in, length);
            char[] s = new char[length];
            bin.read(s, 0, length);

            return new String(s);
        }
        finally
        {
            close(bin);
        }
    }

