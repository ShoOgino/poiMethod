        public String makeNcName ( )
        {
            StringBuffer name = new StringBuffer();
            
            for ( ; ; )
            {
                char ch = makeLetter();

                if (ch == 'x' || ch == 'X')
                    continue;

                name.append( ch );

                break;
            }
            
            for ( int i = r.nextInt( 20 ) ; i > 0 ; i-- )
                name.append( makeLetter() );

            return name.toString();
        }

