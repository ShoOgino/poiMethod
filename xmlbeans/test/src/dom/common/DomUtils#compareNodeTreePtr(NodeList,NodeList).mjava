    /**
     * the two node lists really are the same list
     */
    public static boolean compareNodeTreePtr(NodeList lst1, NodeList lst2)
    {
        if (lst1.getLength() != lst2.getLength())
            return false;

        for (int i = 0; i < lst1.getLength(); i++)
        {
            if (lst1.item(i) != lst2.item(i))
                return false;
        }
        return true;
    }

