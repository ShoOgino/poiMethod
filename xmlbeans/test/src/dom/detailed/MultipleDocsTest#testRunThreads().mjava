    public void testRunThreads() {

        for (int j = 0; j < nThreadCount; j++)
            threads[j].start();

        for (int j = 0; j < nThreadCount; j++) {
            try {
                threads[j].join();
            }
            catch (InterruptedException e) {
                System.err.println("Thread " + j + " interrupted");

            }

        }
    }

