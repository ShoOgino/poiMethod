            Reader reader = wsdlObj.newReader();
            InputSource source = new InputSource(reader);
            source.setSystemId("");


            XmlObject wsdlDefinitions = XmlObject.Factory.parse(reader);
        }
        catch (Exception e)
        {
            throw new RuntimeException(e);
        }
