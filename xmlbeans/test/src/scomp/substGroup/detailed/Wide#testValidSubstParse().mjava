                " <size>12</size>" +
                " <color>white</color>" +
                "</pre:businessshirt>" +
                "<base:product>" +
                " <number>SKU45</number>" +
                "   <name>Accessory</name>" +
                "</base:product>" +
                "<pre:beachumbrella diameter=\"1.43\">" +
                " <number>SKU15</number>" +
                "   <name>Umbrella</name>" +
