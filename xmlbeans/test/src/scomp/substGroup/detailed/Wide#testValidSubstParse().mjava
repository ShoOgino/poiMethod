                "<base:items xmlns:pre=\"http://xbean/scomp/substGroup/Wide\"" +
                " xmlns:base=\"http://xbean/scomp/substGroup/Deep\">" +
                "<pre:businessshirt>" +
                " <number>SKU25</number>" +
