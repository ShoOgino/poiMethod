  private static void printName(String prefix,
                                String uri,
                                String localName,
                                StringBuffer b)
  {
    if (uri != null && !("".equals(uri))) b.append("['" + uri + "']:");
    if (prefix != null && !("".equals(prefix))) b.append(prefix + ":");
    if (localName != null) b.append(localName);
  }

