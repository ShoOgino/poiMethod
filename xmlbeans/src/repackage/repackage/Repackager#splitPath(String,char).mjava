    public static ArrayList splitPath ( String path, char separator )
    {
        ArrayList components = new ArrayList();
        
        for ( ; ; )
        {
            int i = path.indexOf( separator );

            if (i < 0)
                break;

            components.add( path.substring( 0, i ) );
            
            path = path.substring( i + 1 );
        }

        if (path.length() > 0)
            components.add( path );

        return components;
    }

