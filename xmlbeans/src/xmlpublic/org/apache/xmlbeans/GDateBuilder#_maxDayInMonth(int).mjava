    /**
     * Given {year,month} computes maximum
     * number of days for given month
     */
    private static int _maxDayInMonth(int month)
    {
        if (month == 4 || month == 6 || month == 9 || month == 11)
            return 30;

        if (month == 2)
            return 29;

        return 31;
    }

