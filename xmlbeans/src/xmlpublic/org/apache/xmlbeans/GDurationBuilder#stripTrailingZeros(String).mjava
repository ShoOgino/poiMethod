    public static String stripTrailingZeros(String s)
    {
        boolean seenDot = false;
        int i = s.length() - 1;
        int zeroIndex = i;

        while(i>=0)
        {
            if (s.charAt(i)!='0')
                break;
            i--;
            zeroIndex--;
        }
        while(i>=0)
        {
            if (s.charAt(i)=='E')
                return s;
            if (s.charAt(i)=='.')
            {
                seenDot = true;
                break;
            }
            i--;
        }
        
        return seenDot? s.substring(0, zeroIndex+1) : s;
    }

