    /**
     * Sets the day-of-month. The first day of each month is 1.
     * @param day the day of month, from 1-31
     */
    public void setDay(int day)
    {
        if (day < 1 || day > 31)
            throw new IllegalArgumentException("day out of range");
        _bits |= HAS_DAY; _D = day;
    }

