        String getSignature()
        {
            if (_signature!=null)
                return _signature;

            StringBuffer sb = new StringBuffer(60);
            sb.append(_name).append("(");
            for (int i = 0; i < _params.length; i++)
                sb.append((i == 0 ? "" : " ,")).append(_params[i]);
            sb.append(")");

            _signature = sb.toString();

            return _signature;
        }

