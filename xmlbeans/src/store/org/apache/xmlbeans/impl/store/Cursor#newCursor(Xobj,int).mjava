    public static XmlCursor newCursor(Xobj x, int p) {
        Locale l = x._locale;
        if (l.noSync()) {
            l.enter();
            try {
                return new Cursor(x, p);
            } finally {
                l.exit();
            }
        } else synchronized (l) {
            l.enter();
            try {
                return new Cursor(x, p);
            } finally {
                l.exit();
            }
        }
    }

