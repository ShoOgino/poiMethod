    public void save(ContentHandler ch, LexicalHandler lh, XmlOptions options) throws SAXException {
        if (preCheck()) {
            _cur._locale.enter();
            try {
                _save(ch, lh, options);
            } finally {
                _cur._locale.exit();
            }
        } else synchronized (_cur._locale) {
            _cur._locale.enter();
            try {
                _save(ch, lh, options);
            } finally {
                _cur._locale.exit();
            }
        }
    }

