    static Xobj createDomDocumentRootXobj ( Locale l , boolean fragment)
    {
        Xobj xo;

        if (l._saaj == null)
            if (fragment)
                xo = new Xobj.DocumentFragXobj( l );
            else
                xo = new Xobj.DocumentXobj( l );
        else
            xo = new Xobj.SoapPartDocXobj( l );

        if (l._ownerDoc == null)
            l._ownerDoc = xo.getDom();

        return xo;
    }

