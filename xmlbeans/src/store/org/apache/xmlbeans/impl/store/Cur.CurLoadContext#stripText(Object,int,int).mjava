        private void stripText ( Object src, int off, int cch )
        {
            if (_stripWhitespace)
            {
                // this is to avoid bug in cases like <company>Procter &amp; Gamble</company>
                if (_stripLeft)
                {
                    src = _charUtil.stripLeft( src, off, cch );
                    _stripLeft = false;
                    off = _charUtil._offSrc;
                    cch = _charUtil._cchSrc;
                }
            }

            text( src, off, cch );
        }

