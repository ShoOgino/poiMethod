        protected void emitDocType ( String docTypeName, String publicId, String systemId )
        {
            assert docTypeName != null;

            emit( "<!DOCTYPE " );
            emit( docTypeName );

            if (publicId == null && systemId != null)
            {
                emit( " SYSTEM " );
                emitLiteral( systemId );
            }
            else if (publicId != null)
            {
                emit( " PUBLIC " );
                emitLiteral( publicId );
                emit( " " );
                emitLiteral( systemId );
            }

            emit( ">" );
            emit( _newLine );
        }

