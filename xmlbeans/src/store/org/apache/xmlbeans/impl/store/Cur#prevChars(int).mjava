    int prevChars ( int cch )
    {
        assert isPositioned();

        int cchLeft = cchLeft();

        if (cch < 0 || cch > cchLeft)
            cch = cchLeft;

        // Dang, I love this stmt :-)

        if (cch != 0)
            moveTo( getNormal( getDenormal(), _posTemp - cch ), _posTemp );

        return cch;
    }

