        public static CharNode remove ( CharNode nodes, CharNode node )
        {
            assert isOnList( nodes, node );
            
            if (nodes == node)
                nodes = node._next;
            else
                node._prev._next = node._next;

            if (node._next != null)
                node._next._prev = node._prev;

            node._prev = node._next = null;

            return nodes;
        }

