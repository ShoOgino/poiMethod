    public QName _getName() {
        // TODO - consider taking this out of the gateway
        
        switch (_cur.kind()) {
            case ATTR:

                if (_cur.isXmlns()) {
                    return
                            _cur._locale.makeQNameNoCheck(_cur.getXmlnsUri(), _cur.getXmlnsPrefix());
                }

                // Fall thru
                
            case ELEM:
            case PROCINST:
                return _cur.getName();
        }

        return null;
    }

