    void removeFollowingAttrs ( )
    {
        assert isAttr();

        QName attrName = getName();

        push();

        if (toNextAttr())
        {
            while ( isAttr() )
            {
                if (getName().equals( attrName ))
                    moveNode( null );
                else if (!toNextAttr())
                    break;
            }
        }

        pop();
    }

