    public boolean _toSelection(int i) {
        if (i < 0)
            return false;

        while (i >= _cur.selectionCount()) {
            if (_pathEngine == null)
                return false;

            if (!_pathEngine.next(_cur)) {
                _pathEngine.release();
                _pathEngine = null;

                return false;
            }
        }

        _cur.moveToSelection(_currentSelection = i);

        return true;
    }

