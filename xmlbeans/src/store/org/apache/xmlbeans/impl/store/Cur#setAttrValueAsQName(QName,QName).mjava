    void setAttrValueAsQName ( QName name, QName value )
    {
        assert isContainer();

        if (value == null)
        {
            _xobj.removeAttr( name );
        }
        else
        {
            if (toAttr( name ))
            {
                removeFollowingAttrs();
            }
            else
            {
                next();
                createAttr( name );
            }

            setValueAsQName( value );

            toParent();
        }
    }

