        protected void emitXmlns ( String prefix, String uri )
        {
            assert prefix != null;
            assert uri != null;

            emit( "xmlns" );

            if (prefix.length() > 0)
            {
                emit( ':' );
                emit( prefix );
            }

            emit( '=', '\"' );

            // TODO - must encode uri properly

            emit( uri );
            entitizeAttrValue(false);

            emit( '"' );
        }

