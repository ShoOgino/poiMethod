    public boolean _removeXml() {
        if (_cur.isRoot())
            throw new IllegalStateException("Can't remove a whole document.");

        if (_cur.isFinish())
            return false;

        assert _cur.isText() || _cur.isNode();

        if (_cur.isText())
            _cur.moveChars(null, -1);
        else
            _cur.moveNode(null);

        return true;
    }

