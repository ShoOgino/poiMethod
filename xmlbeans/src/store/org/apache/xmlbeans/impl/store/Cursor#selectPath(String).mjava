    public void selectPath(String path) {
        if (preCheck()) {
            _cur._locale.enter();
            try {
                _selectPath(path);
            } finally {
                _cur._locale.exit();
            }
        } else synchronized (_cur._locale) {
            _cur._locale.enter();
            try {
                _selectPath(path);
            } finally {
                _cur._locale.exit();
            }
        }
    }

