    public static XMLStreamReader newXmlStreamReader ( Cur c, Object src, int off, int cch )
    {
        XMLStreamReaderBase xs = new XMLStreamReaderForString( c, src, off, cch );
        
        if (c._locale.noSync())
            return new UnsyncedJsr173( c._locale, xs );
