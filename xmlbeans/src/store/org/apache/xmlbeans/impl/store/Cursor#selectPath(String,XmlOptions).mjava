    public void selectPath(String path, XmlOptions options) {
        if (preCheck()) {
            _cur._locale.enter();
            try {
                _selectPath(path, options);
            } finally {
                _cur._locale.exit();
            }
        } else synchronized (_cur._locale) {
            _cur._locale.enter();
            try {
                _selectPath(path, options);
            } finally {
                _cur._locale.exit();
            }
        }
    }

