    void setValueAsQName ( QName qname )
    {
        assert isNode();

        String value  = qname.getLocalPart();
        String ns     = qname.getNamespaceURI();

        String prefix =
            prefixForNamespace(
                ns, qname.getPrefix().length() > 0 ? qname.getPrefix() : null, true );

        if (prefix.length() > 0)
            value = prefix + ":" + value;

        setValue( value );
    }

