        protected void emitProcinst ( SaveCur c )
        {
            assert c.isProcinst();

            emit( "<?" );

            // TODO - encoding issues here?
            emit( c.getName().getLocalPart() );

            c.push();

            c.next();

            if (c.isText())
            {
                emit( ' ' );
                emitPiText( c );
            }

            c.pop();

            emit( "?>" );
        }

