    public String getAttributeText(QName attrName) {
        if (preCheck()) {
            _cur._locale.enter();
            try {
                return _getAttributeText(attrName);
            } finally {
                _cur._locale.exit();
            }
        } else synchronized (_cur._locale) {
            _cur._locale.enter();
            try {
                return _getAttributeText(attrName);
            } finally {
                _cur._locale.exit();
            }
        }
    }

