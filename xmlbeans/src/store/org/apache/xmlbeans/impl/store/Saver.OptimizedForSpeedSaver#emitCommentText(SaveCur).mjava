        protected void emitCommentText ( SaveCur c )
        {
            assert c.isText();

            Object src = c.getChars();
            int cch = c._cchSrc;
            int off = c._offSrc;
            int index = 0;
            int indexLimit = 0;
            while( index<cch )
            {
                indexLimit = index + 512 > cch ? cch : 512;
                CharUtil.getChars( _buf, 0, src, off+index, indexLimit );
                entitizeAndWriteCommentText(indexLimit-index);
                index = indexLimit;
            }
        }

