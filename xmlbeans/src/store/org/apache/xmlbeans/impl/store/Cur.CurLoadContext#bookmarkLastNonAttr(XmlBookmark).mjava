        protected void bookmarkLastNonAttr ( XmlBookmark bm )
        {
            if (_lastPos > 0 || !_lastXobj.isAttr())
                _lastXobj.setBookmark( _lastPos, bm.getKey(), bm );
            else
            {
                assert _lastXobj._parent != null;

                _lastXobj._parent.setBookmark( 0, bm.getKey(), bm );
            }
        }

