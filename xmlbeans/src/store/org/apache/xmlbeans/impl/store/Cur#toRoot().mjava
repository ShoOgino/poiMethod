    void toRoot ()
    {
        Xobj xobj = _xobj;
        while (!xobj.isRoot())
        {
            if (xobj._parent==null)
            {
                Cur r = _locale.tempCur();

                r.createRoot();

                Xobj root = r._xobj;

                r.next();
                moveNode( r );
                r.release();

                xobj = root;
                break;
            }
            xobj = xobj._parent;
        }
        moveTo(xobj);
    }

