    public boolean ___toNextSibling()
    {
        if (!_cur.hasParent())
            return false;

        Xobj parent = _cur.getParentNoRoot();

        if (parent==null)
        {
            _cur._locale.enter();
            try
            {
                parent = _cur.getParent();
            } finally {
                _cur._locale.exit();
            }
        }

        return Locale.toNextSiblingElement(_cur, parent);
    }

