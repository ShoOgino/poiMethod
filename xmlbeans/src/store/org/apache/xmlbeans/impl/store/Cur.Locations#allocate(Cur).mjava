        int allocate ( Cur addThis )
        {
            assert addThis.isPositioned();

            if (_free == NULL)
                makeRoom();

            int i = _free;

            _free = _next [ i ];

            _next [ i ] = NULL;
            assert _prev [ i ] == NULL;

            assert _curs [ i ] == null;
            assert _xobjs[ i ] == null;
            assert _poses[ i ] == NO_POS;

            _xobjs [ i ] = addThis._xobj;
            _poses [ i ] = addThis._pos;

            _naked = insert( _naked, NULL, i, _nextN, _prevN );

            return i;
        }

