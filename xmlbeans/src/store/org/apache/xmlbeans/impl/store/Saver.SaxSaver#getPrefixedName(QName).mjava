        private String getPrefixedName ( QName name )
        {
            String uri = name.getNamespaceURI();
            String local = name.getLocalPart();

            if (uri.length() == 0)
                return local;

            String prefix = getUriMapping( uri );

            if (prefix.length() == 0)
                return local;

            return prefix + ":" + local;
        }

