    public void save(Writer w, XmlOptions options) throws IOException {
        if (preCheck()) {
            _cur._locale.enter();
            try {
                _save(w, options);
            } finally {
                _cur._locale.exit();
            }
        } else synchronized (_cur._locale) {
            _cur._locale.enter();
            try {
                _save(w, options);
            } finally {
                _cur._locale.exit();
            }
        }
    }

