            _cur._locale.enter();
            try {
                _insertProcInst(target, text);
            } finally {
                _cur._locale.exit();
            }
        } else synchronized (_cur._locale) {
            _cur._locale.enter();
            try {
                _insertProcInst(target, text);
            } finally {
                _cur._locale.exit();
            }
        }
    }

