    static Schema getSchema(XmlObject o)
    {
        XmlCursor c = o.newCursor();

        try
        {
            while ( c.toParent() )
            {
                o = c.getObject();

                if (o.schemaType().equals(Schema.type))
                    return (Schema) o;
            }
        }
        finally
        {
            c.dispose();
        }

        return null;
    }

