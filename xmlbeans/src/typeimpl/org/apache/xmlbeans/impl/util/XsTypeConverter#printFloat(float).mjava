    public static String printFloat(float value)
    {
        if (value == Float.POSITIVE_INFINITY)
            return POS_INF_LEX;
        else if (value == Float.NEGATIVE_INFINITY)
            return NEG_INF_LEX;
        else if (Float.isNaN(value))
            return NAN_LEX;
        else
            return Float.toString(value);
    }

