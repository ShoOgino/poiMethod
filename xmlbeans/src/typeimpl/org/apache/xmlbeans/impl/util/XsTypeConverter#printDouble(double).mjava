    public static String printDouble(double value)
    {
        if (value == Double.POSITIVE_INFINITY)
            return POS_INF_LEX;
        else if (value == Double.NEGATIVE_INFINITY)
            return NEG_INF_LEX;
        else if (Double.isNaN(value))
            return NAN_LEX;
        else
            return Double.toString(value);
    }

