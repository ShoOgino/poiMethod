    public static QName validateLexical(
        String v, ValidationContext context, PrefixResolver resolver)
    {
        QName name;

        try
        {
            name = parse(v, resolver);
        }
        catch ( XmlValueOutOfRangeException e )
        {
            context.invalid(e.getMessage());
            name = null;
        }

        return name;
    }

