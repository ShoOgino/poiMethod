    public static BigInteger lex(String s, ValidationContext vc)
    {
        if (s.length() > 0 && s.charAt( 0 ) == '+' )
            s = s.substring(1);

        try { return new BigInteger(s); }
        catch (Exception e) { vc.invalid(XmlErrorCodes.INTEGER, new Object[] { s }); return null; }
    }

