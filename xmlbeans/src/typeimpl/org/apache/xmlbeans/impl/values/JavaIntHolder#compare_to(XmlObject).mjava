    // comparators
    protected int compare_to(XmlObject i)
    {
        if (((SimpleValue)i).instanceType().getDecimalSize() > SchemaType.SIZE_INT)
            return -i.compareTo(this);

        return _value == ((XmlObjectBase)i).intValue() ? 0 :
               _value < ((XmlObjectBase)i).intValue() ? -1 : 1;
    }

